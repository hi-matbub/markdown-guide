{
  "name": "markdown-guide",
  "version": "1.0.0",
  "description": "Accepting PRs :smile:",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "prettier-docs": "prettier --config .prettierrc --write \"**/*.md\"",
    "lint": "npm run lint:js",
    "lint:js": "eslint --cache \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hi-matbub/markdown-guide.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hi-matbub/markdown-guide/issues"
  },
  "homepage": "https://github.com/hi-matbub/markdown-guide#readme",
  "devDependencies": {
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier"
    ],
    "*.md": [
      "npm run prettier-docs"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
